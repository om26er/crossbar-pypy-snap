#!/bin/sh -e

if [ "$SNAP_ARCH" = "armhf" ]; then
    if [ ! -f "$SNAP_USER_COMMON/libffi.so.5" ]; then
        ln -s /usr/lib/arm-linux-gnueabihf/libffi.so $SNAP_USER_COMMON/libffi.so.5
    fi
    export LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$SNAP_USER_COMMON
fi

$SNAP/bin/pypy3 $SNAP/bin/crossbar "$@"
